<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>Before Trade</title>
  </head>
  <body>

  <div class="container">

      <section id="title">
        <h1><a href="/">Before Trade</a></h1>
      </section>

      <section id="main">

        <div class="row">

          <div class="col-sm-4 quoteCard <% if(data[0].change < 0 ) { %>red<% } else { %>green<% } %>">
            <h4>S&P 500</h4>
            <h2><%= data[0].value %></h2>
            <h6> <%= data[0].change %> (<%= data[0].changePcnt %>%) </h6>
          </div>

          <div class="col-sm-4 quoteCard <% if(data[1].change < 0 ) { %>red<% } else { %>green<% } %>">
            <h4>NASDAQ</h4>
            <h2><%= data[1].value %></h2>
            <h6> <%= data[1].change %> (<%= data[1].changePcnt %>%) </h6>
          </div>

          <div class="col-sm-4 quoteCard <% if(data[6].change < 0 ) { %>red<% } else { %>green<% } %>">
            <h4>VIX</h4>
            <h2><%= data[6].value %></h2>
            <h6> <%= data[6].change %> (<%= data[6].changePcnt %>%) </h6>
          </div>

        </div>

        <div class="row">

          <div class="col-sm-4 quoteCard <% if(data[6].change < 0 ) { %>red<% } else { %>green<% } %>">
            <h4>US 10Y</h4>
            <h2><%= data[9].value %></h2>
            <h6> <%= data[9].change %> (<%= data[9].changePcnt %>%) </h6>
          </div>

          <div class="col-sm-4 quoteCard <% if(data[15].change < 0 ) { %>red<% } else { %>green<% } %>">
            <h4>WTI Crude</h4>
            <h2><%= data[15].value %></h2>
            <h6> <%= data[15].change %> (<%= data[15].changePcnt %>%) </h6>
          </div>

          <div class="col-sm-4 quoteCard <% if(data[17].change < 0 ) { %>red<% } else { %>green<% } %>">
            <h4>Gold </h4>
            <h2><%= data[17].value %></h2>
            <h6> <%= data[17].change %> (<%= data[17].changePcnt %>%) </h6>
          </div>

        </div>

      </section>

      <section id="footer">
        <h6>Total Pageviews : <%= pageviews_count %> | Made by <a href="https://realzenfox.github.io/portfolio">Govind</a></h6>
      </section>

  </div>



    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>
